<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="DolomiteService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-06.2.4">
  <WorkerRole name="DolomiteWcfService" vmsize="ExtraSmall">
    <Runtime executionContext="elevated" />
    <!-- DO NOT REMOVE, cert store will be inaccessible to the role otherwise, See http://stackoverflow.com/a/14468164 for more details-->
    <Imports>
    </Imports>
    <Endpoints>
      <InputEndpoint name="DolomiteRest" protocol="https" port="443" localPort="8080" certificate="LocalSSLCert" />
    </Endpoints>
    <Certificates>
      <Certificate name="LocalSSLCert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="TrackStorageContainer" />
      <Setting name="UserKeysEnabled" />
      <Setting name="IdleTimeout" />
      <Setting name="AbsoluteTimeout" />
      <Setting name="SqlConnectionString" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="UploadStorage" cleanOnRoleRecycle="true" sizeInMB="8092" />
    </LocalResources>
  </WorkerRole>
  <WorkerRole name="DolomiteBackgroundProcessing" vmsize="ExtraSmall">
    <Imports>
    </Imports>
    <ConfigurationSettings>
      <Setting name="TrackStorageContainer" />
      <Setting name="StorageConnectionString" />
      <Setting name="SqlConnectionString" />
      <Setting name="Onboarding_WorkCheckInterval" />
      <Setting name="Art_WorkCheckInterval" />
      <Setting name="Metadata_WorkCheckInterval" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="OnboardingStorage" cleanOnRoleRecycle="true" sizeInMB="4096" />
    </LocalResources>
  </WorkerRole>
</ServiceDefinition>